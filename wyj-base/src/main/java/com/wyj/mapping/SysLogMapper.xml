<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wyj.dao.SysLogMapper">
	
	<insert id="save">
		INSERT INTO s_log (
			operation,
			time,
			method,
			params,
			createTime
		)
		VALUES (
			#{operation},
			#{time}, 
			#{method}, 
			#{params}, 
			NOW()
		)
	</insert>
	
	<delete id="batchRemove">
		DELETE
		FROM
			s_log
		WHERE
			logId IN
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>
	
	<delete id="batchRemoveAll">
		DELETE
		FROM
			s_log
	</delete>

	<select id="list" resultType="com.wyj.entity.SysLogEntity">
		SELECT * FROM s_log
	</select>

</mapper>